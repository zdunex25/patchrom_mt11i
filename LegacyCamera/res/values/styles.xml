<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeCamera" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
    </style>
    <style name="OnScreenHintTextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textColorHighlight">#ffff9200</item>
        <item name="android:textColorHint">#ff808080</item>
        <item name="android:textColorLink">#ff5c5cff</item>
    </style>
    <style name="OnScreenHintTextAppearance.Small" parent="@style/OnScreenHintTextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>
    <style name="Animation_OnScreenHint">
        <item name="android:windowEnterAnimation">@anim/on_screen_hint_enter</item>
        <item name="android:windowExitAnimation">@anim/on_screen_hint_exit</item>
    </style>
    <style name="ReviewControlIcon">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_pressed</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">50.0dip</item>
        <item name="android:layout_height">75.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="ReviewPlayIcon">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_gallery_play</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="RecordingLabels">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/recording_time_elapsed_text</item>
        <item name="android:background">@color/on_viewfinder_label_background_color</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26.0dip</item>
        <item name="android:shadowColor">#c0000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="SettingPopupWindow">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/setting_popup_right_margin</item>
        <item name="android:layout_above">@id/indicator_control</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="PopupTitleText">
        <item name="android:textSize">@dimen/popup_title_text_size</item>
        <item name="android:textColor">@color/popup_title_color</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PopupTitleSeperator">
        <item name="android:background">@color/popup_title_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0dip</item>
    </style>
    <style name="SettingItemList">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SettingItemTitle">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="SettingItemText">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/setting_item_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="SettingRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/setting_picker</item>
        <item name="android:paddingLeft">@dimen/setting_item_list_margin</item>
        <item name="android:paddingRight">@dimen/setting_item_list_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/setting_row_height</item>
    </style>
    <style name="SettingKnob">
        <item name="android:textSize">@dimen/setting_knob_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/btn_setting_picker</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/setting_knob_width</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="OnScreenIndicator">
        <item name="android:padding">1.0dip</item>
        <item name="android:focusable">false</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="OnScreenIndicators">
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">@dimen/indicator_bar_width</item>
    </style>
    <style name="ViewfinderLableLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">13.0dip</item>
        <item name="android:layout_marginTop">13.0dip</item>
        <item name="android:layout_marginRight">13.0dip</item>
        <item name="android:layout_marginBottom">@dimen/indicator_bar_width</item>
    </style>
    <style name="OnViewfinderLabel">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_on_preview</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">3.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PanoViewHorizontalBar">
        <item name="android:background">#ff000000</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:alpha">1.0</item>
    </style>
    <style name="PanoCustomDialogText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
    <style name="ReviewThumbnail">
        <item name="android:layout_width">52.0dip</item>
        <item name="android:layout_height">52.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="AnimationPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/share_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/share_popup_exit</item>
    </style>
    <style name="EffectSettingGrid">
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_list_margin</item>
        <item name="android:layout_marginRight">@dimen/setting_item_list_margin</item>
        <item name="android:horizontalSpacing">3.0dip</item>
        <item name="android:verticalSpacing">3.0dip</item>
        <item name="android:numColumns">3</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <style name="EffectSettingItem">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/setting_picker</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingTop">9.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">9.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EffectSettingItemTitle">
        <item name="android:textSize">@dimen/effect_setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EffectSettingTypeTitle">
        <item name="android:textSize">@dimen/effect_setting_type_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/effect_setting_type_text_left_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/effect_setting_type_text_min_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:alpha">0.7</item>
    </style>
    <style name="EffectTypeSeparator">
        <item name="android:background">#ff2c2c2c</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0dip</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">14.0dip</item>
    </style>
    <style name="EffectTitleSeparator">
        <item name="android:background">@android:drawable/divider_horizontal_dark</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0dip</item>
    </style>
    <style name="OneRowGrid">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:stretchMode">none</item>
    </style>
</resources>
